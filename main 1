#include <cstring>
#include <iostream>
using namespace std;
#include <stdlib.h>
#include <time.h>
#include <unistd.h>
#include <Windows.h>
#include "bool.h"


char matrix[10][10];
int i;
int f;

void tablero(int a,int l){

	
	srand(time(0));
		
	for(i = 1; i <= a; i++) {
		
		for(f = 1; f <= l; f++) {
			
		int mayus = 65 + (rand()% 25); //67
		int minus = 97 + (rand()% 25);  //108
		int h = 1 + (rand()% 2);   //2
		
		if(h == 1){
			matrix[i][f] = mayus;
			cout << matrix[i][f] << " ";
			
		}
		else if(h == 2){
			matrix[i][f] = minus;			
			cout << matrix[i][f] << " ";
			
		}
		
		
		}
		cout << endl;
	}
	usleep(2000000);
	system("cls");
}


void vocales(){
	
	std::system("clear");
	
	for(int i = 1; i <= 10; i++) {
		
		for(int f = 1; f <= 10; f++) {
			
			if(matrix[i][f] == 'A'){
				char *Aptr = &(matrix[i][f]);
				cout <<"\x1b[34m"<< matrix[i][f]<<"\x1B[0m" << " ";
				
				
				continue;
			}
	
			else if(matrix[i][f] == 'E'){
				char *Eptr = &(matrix[i][f]);
				cout <<"\x1b[34m"<< matrix[i][f]<<"\x1B[0m" << " ";
				continue;
			}
			else if(matrix[i][f] == 'I'){
				char *Iptr = &(matrix[i][f]);
				cout <<"\x1b[34m"<< matrix[i][f]<<"\x1B[0m" << " ";
				continue;
			}
			else if(matrix[i][f] == 'O'){
				char *Optr = &(matrix[i][f]);
				cout <<"\x1b[34m"<< matrix[i][f]<<"\x1B[0m" << " ";
				continue;
			}
			else if(matrix[i][f] == 'U'){
				char *Uptr = &(matrix[i][f]);
				cout <<"\x1b[34m"<< matrix[i][f]<<"\x1B[0m" << " ";
				continue;
			}
			else if(matrix[i][f] == 'a'){
				char *aptr = &(matrix[i][f]);
				cout <<"\x1b[34m"<< matrix[i][f]<<"\x1B[0m" << " ";
				continue;
			}
			else if(matrix[i][f] == 'e'){
				char *eptr = &(matrix[i][f]);
				cout <<"\x1b[34m"<< matrix[i][f]<<"\x1B[0m" << " ";
				continue;
			}
			else if(matrix[i][f] == 'i'){
				char *iptr = &(matrix[i][f]);
				cout <<"\x1b[34m"<< matrix[i][f]<<"\x1B[0m" << " ";
				continue;
			}
			else if(matrix[i][f] == 'o'){
				char *optr = &(matrix[i][f]);
				cout <<"\x1b[34m"<< matrix[i][f]<<"\x1B[0m" << " ";
				continue;
			}
			else if(matrix[i][f] == 'u'){
				char *uptr = &(matrix[i][f]);
				cout <<"\x1b[34m"<< matrix[i][f]<<"\x1B[0m" << " ";
				continue;
			}
			
			cout << matrix[i][f] << " ";
				
		

		}
		
		cout << endl;
	}
}

